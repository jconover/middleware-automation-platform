<?xml version="1.0" encoding="UTF-8"?>
<server description="Open Liberty Server">
    <featureManager>
        <feature>restfulWS-3.1</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>mpHealth-4.0</feature>
        <feature>mpMetrics-5.0</feature>
        <feature>jdbc-4.3</feature>
        <feature>ssl-1.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="{{ liberty_http_port | default(9080) }}"
                  httpsPort="{{ liberty_https_port | default(9443) }}" />

    <ssl id="defaultSSLConfig"
         keyStoreRef="defaultKeyStore" />
    <keyStore id="defaultKeyStore"
              location="${server.config.dir}/resources/security/key.p12"
              password="{{ liberty_keystore_password | default('changeit') }}"
              type="PKCS12" />

    <logging consoleLogLevel="INFO" copySystemStreams="true" />
</server>
