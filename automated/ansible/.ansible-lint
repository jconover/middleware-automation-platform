---
# Ansible-lint configuration for Enterprise Middleware Automation Platform
# Documentation: https://ansible.readthedocs.io/projects/lint/configuring/

profile: moderate

# Offline mode for CI/CD environments
offline: false

# Paths to exclude from linting
exclude_paths:
  - .cache/
  - .git/
  - molecule/
  - collections/

# Skip specific rules that are too strict for this project
skip_list:
  - yaml[line-length]  # Long lines are often necessary for clarity in templates
  - role-name  # Using descriptive names (liberty, monitoring) not galaxy format

# Rules to warn about but not fail
warn_list:
  - experimental

# Use default rules
use_default_rules: true

# Limit output
parseable: true
quiet: false

# Mock modules for linting without installing collections
mock_modules:
  - amazon.aws.ec2_instance
  - amazon.aws.aws_ec2

# Mock roles
mock_roles:
  - common
  - liberty
  - monitoring
  - postgresql
  - redis
  - nginx

# Variable naming convention
var_naming_pattern: "^[a-z_][a-z0-9_]*$"

# Loop variable naming
loop_var_prefix: "^(item|idx|key|value|host|file|pkg|svc|user|port|dir|path)"
